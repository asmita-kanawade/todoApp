<!DOCTYPE html>
<head>
  <title>Todo App</title>
  <style>
    #body{
    background-image: url("https://media.istockphoto.com/photos/blank-notebook-and-pencil-with-todo-list-picture-id620725324");
    background-size: cover;
    background-repeat: no-repeat;
    border-radius: 20px;
  }
  .todo-container {
    color: white;
    position: absolute;
    top: 71%;
    left: 72%;
    padding: 20px;
    width: 469px;
    transform: translate(-50%, -50%);
    background-image: url(https://previews.123rf.com/images/vkulieva/vkulieva1602/vkulieva160200007/52452427-seamless-pattern-for-todo-list-universal-background.jpg);
    background-size: cover;
    background-repeat: no-repeat;
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .todo {
    width: 400px;
  }
  .todo-container h2 {
    padding: 10px;
    font-family: "Candal", sans-serif;
    font-size: 2em;
  }
  .todo-header input {
    width: 82%;
    border: none;
    border-radius: 5px;
    height: 34px;
    font-family: "Candal", sans-serif;
  }
  .todo-header button {
    color: white;
    border-radius: 0%;
    cursor: pointer;
    padding: 7px;
    background-color: rgb(51, 212, 100);
  }
  .todo-container ul {
    list-style: none;
  }
  .todo-list-item {
    padding: 10px;
    margin-top: 10px;
    border: none;
    border-radius: 5px;
    font-family: "Candal", sans-serif;
    background: rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: row;
  }
  .todo-list-item form {
    width: 100%;
    display: flex;
  }
  .todo-list-item input {
    flex-grow: 2;
    margin-right: 20px;
    border: none;
    border-radius: 5px;
    font-family: "Candal", sans-serif;
  }
  .todo-list-item button {
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    padding: 5px;
    font-family: "Candal", sans-serif;
    background-color: rgb(51, 212, 100);
  }
  .todo-list-item .cancel {
    color: white;
    text-decoration: none;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    padding: 5px;
    font-family: "Candal", sans-serif;
    background-color: rgb(223, 43, 43);
    margin-left: 5px;
  }
  .todo-list-item div {
    flex-grow: 2;
  }
  .todo-list-item .edit {
    padding-top: 2px;
    cursor: pointer;
    padding-left: 4px;
    background-color: orange;
    color: white;
    padding: top;
    font-size: 12px;
    margin-right: 3px;
}
  .todo-list-item .remove {
    padding-top: 2px;
    cursor: pointer;
    padding-left: 4px;
    padding-right: 4px;
    height: 19px;
    width: 17px;
    background-color: red;
    color: white;
    padding: top;
    font-size: 12px;
  }
  
  
  </style>
</head>
<body>
  <div class="todo-container">
    <h2>To-Do List</h2>
    <div class="todo">
      <form action="" method="POST" class="todo-header">
        <input type="text" name="content" />
        <button type="submit"><span class="fas fa-plus"></span></button>
      </form>
      <ul class="todo-list">
        <% todoTasks.forEach(details => { %> <% if (details._id == idTask) { %>
        <li class="todo-list-item">
          <form action="/edit/<%= details._id %>" method="POST">
            <input type="text" value="<%= details.content %>" name="content" />
            <button type="submit">Update</button>
            <a href="/" class="cancel">Cancel</a>
          </form>
        </li>
        <% } else { %>
        <li class="todo-list-item">
          <div class="todo-list-item-name"><%= details.content %></div>
          <a href="/edit/<%= details._id %>" class="edit">
            <span class="fas fa-edit"></span>
          </a>
          <a href="/remove/<%= details._id %>" class="remove">
            <span class="fas fa-times"></span>
          </a>
        </li>
        <% } %> <% }) %>
      </ul>
    </div>
  </div>
</body>
