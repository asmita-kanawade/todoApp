<!DOCTYPE html>
<head>
  <title>Todo App</title>
  <style>
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  #body{
    background-image: url("https://media.istockphoto.com/photos/blank-notebook-and-pencil-with-todo-list-picture-id620725324");
    background-size: cover;
    background-repeat: no-repeat;
    border-radius: 20px;
  }
  .todo-container {
    color: white;
    position: absolute;
    top: 58%;
    left: 72%;
    padding: 15px;
    width: 469px;
    transform: translate(-50%, -50%);
    background-image: url(https://previews.123rf.com/images/vkulieva/vkulieva1602/vkulieva160200007/52452427-seamless-pattern-for-todo-list-universal-background.jpg);
    background-size: cover;
    background-repeat: no-repeat;
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 10%;
  }
  .todo {
    width: 400px;
  }
  .todo-container h2 {
    padding: 10px;
    font-family: "Candal", sans-serif;
    font-size: 2em;
  }
  .todo-header input {
    width: 82%;
    border: none;
    border-radius: 5px;
    height: 34px;
    font-family: "Candal", sans-serif;
    padding: 10px;
  }
  .todo-header button {
    color: white;
    border-radius: 0%;
    cursor: pointer;
    padding: 7px;
    background-color: rgb(51, 212, 100);
  }
  .todo-container ul {
    list-style: none;
  }
  .todo-list-item {
    padding: 10px;
    margin-top: 10px;
    border: none;
    border-radius: 5px;
    font-family: "Candal", sans-serif;
    background: rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: row;
  }
  .todo-list-item form {
    width: 100%;
    display: flex;
  }
  .todo-list-item input {
    flex-grow: 2;
    margin-right: 20px;
    border: none;
    border-radius: 5px;
    font-family: "Candal", sans-serif;
  }
  .todo-list-item button,a {
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    padding: 5px;
    font-family: "Candal", sans-serif;
    background-color: rgb(51, 212, 100);
  }
  .todo-list-item .cancel {
    color: white;
    text-decoration: none;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    padding: 5px;
    font-family: "Candal", sans-serif;
    background-color: rgb(223, 43, 43);
    margin-left: 5px;
    text-decoration: none;
  }
  .todo-list-item div {
    flex-grow: 2;
  }
  .todo-list-item .edit {
    cursor: pointer;
    background-color: orange;
    color: white;
    font-size: 12px;
    margin-right: 3px;
    text-decoration: none;
}
  .todo-list-item .remove {
    cursor: pointer;
    background-color: red;
    color: white;
    padding: top;
    font-size: 12px;
    text-decoration: none;
  }
  .todo-list-item input.checkbox{
    flex-grow: 0;
    margin-right: 15px;
    height: 17px;
    width: 20px;
  }  
  input[type=checkbox]:checked + label.strikethrough{
  text-decoration: line-through;
}
.todo-list-item input[type=checkbox]:checked + label {
    	background-color: #63a70a;
    }
  
  </style>
</head>
<body id="body">
  <div class="todo-container">
    <h2>To-Do List</h2>
    <div class="todo">
      <form action="/" method="POST" class="todo-header">
        <input type="text" name="content" class="addTask"/>
        <button type="submit"><span class="fas fa-plus"></span>ADD</button>
      </form>
      <ul class="todo-list">
        <% todoTasks.forEach(details => { %>
        <li class="todo-list-item">
          <div class="todo-list-item-name">
            <form action="/toggle-status/<%= details._id %>/<%= details.completed ? false : true %> " >
           <input type="checkbox" id="check" name="check" class="checkbox" onclick="this.form.submit()" <%= details.completed ? "checked" : "" %>/>
           <label class="strikethrough"><span class="todo-list-item-name"><%= details.content %></span></label>
            </form>
          </div>

          <!-- <div class="todo-list-item-name"><%= details.content %></div> -->

          <a href="/edit/<%= details._id %>" class="edit">
            UPDATE
          </a>
          <a href="/remove/<%= details._id %>" class="remove">DELETE
          </a>
        </li>
        <% }) %>
      </ul>
    </div>
  </div>

</body>
